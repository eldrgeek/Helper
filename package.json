{
  "name": "myproject",
  "version": "1.0.0",
  "scripts": {
    "start:slm": "npm-run-all --parallel start:server start:logger start:monitor",
    "start:server": "cd server && nodemon --exec ts-node src/server.ts",
    "start:client": "cd client && npm start",
    "start:monitor": "cd server && source venv/bin/activate && nodemon --exec python monitor.py --watch monitor.py",
    "start:cli": "cd server && ts-node src/cli.ts",
    "start:logger": "cd server && nodemon --exec ts-node src/logger.ts",
    "dev": "npm-run-all --parallel start:server start:client start:monitor",
    "build": "cd client && npm run build",
    "lint:js": "eslint . --ext .js,.ts",
    "lint:py": "black .",
    "lint": "npm run lint:js && npm run lint:py"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/webpack": "^5.28.5",
    "@types/webpack-dev-middleware": "^5.0.2",
    "@types/webpack-hot-middleware": "^2.25.9",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^7.28.0",
    "html-webpack-plugin": "^5.6.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "style-loader": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.3.2",
    "webpack": "^5.93.0",
    "webpack-dev-middleware": "^7.3.0",
    "webpack-hot-middleware": "^2.26.1"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http": "^0.0.1-security",
    "socket.io": "^4.7.5",
    "uuid": "^10.0.0"
  }
}